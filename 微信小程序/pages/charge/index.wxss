/* pages/charge/index.wxss */
.input-box{
	background-color: #fff;
	margin: 0 auto;
	padding: 20rpx 0;
	border-radius: 10rpx;
	width: 90%;

}
.input-box input{
	width: 100%;
	height: 100%;
	text-align: center;
}
.choose{
	background-color: #fff;
}
.choose-grids{
	display: flex;
	flex-wrap: wrap;
	justify-content: space-around;
	padding: 50rpx;
}
.choose-grids .grid{
	width: 45%;
	height: 100rpx;
	margin-top: 36rpx;
	border-radius: 6rpx;
	line-height: 100rpx;
	text-align: center;
	border: 2rpx solid #ff6600;
}
.choose-grids .grid:first-child,
.choose-grids .grid:nth-of-type(2){
	margin-top: 0;
}
.sm{
  text-align: center;
}
.sm-t{
  color: #C7C8C7;
  font-size: 28rpx;
}