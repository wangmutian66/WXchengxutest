<!--index.wxml-->
<view class="container">
  <view class="page">
    <image mode="widthFix" src='{{image1}}'></image>

    <view class='act-item'>
      <navigator url="{{links}}" hover-class="navigator-hover">
        <image mode="widthFix" src='{{image2}}'></image>
      </navigator>
      <view class='engbox'>
      <text class='pro_name'>{{title}}</text>
      <!-- 能量条 -->
      <view class='energy'>
        <view class='speed' style='width:{{ener_num}}%'></view>
        <text class='ener_num'>已兑换{{ener_num}}份</text>
      </view>
      </view>
      <text>{{code}}</text>
    </view>


    <image mode="widthFix" src='{{image_tel}}'></image>

  </view>
</view>