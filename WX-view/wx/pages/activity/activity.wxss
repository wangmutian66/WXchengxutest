/**index.wxss**/
.page{position: relative}
.page image{width: 100%;}
.bg_listpage{ background: #FFDB3C}
.btn-area{position: absolute; top:14px; left: 14px; width: auto; height: 30px; z-index: 9; font-size:0.75rem; color:#ffdb3c}
.banner{position: relative;width: 100%;}
.help,.rule,.order,.Jackpot,
.cooperation{position: relative;width: 80%; margin: 0 10%}
.banner text{ position: absolute; color: white; bottom:5%; font-size: 0.875rem; left: 0; width:100%;text-align: center}
.card_info{font-size: 0.75rem;}
.card_info .first_child{font-size: 0.875rem; margin-top:3%; width: 100%; text-align: center; display: inline-block; font-weight: bold}
/*width  80%  */
.card_info{background: url(http://ruihe.99zan.net/Public/images/wx/wx_03.jpg) no-repeat; width: 72%; height:80px;background-size: 100%; margin: 0 10%; padding: 10px 4%; margin-top:16px; }
.help{ margin:0px 10%; z-index: 1;}
.exchange,.copie{margin-top:8%;display:inline-block; padding: 0 10px}
.copie{float: right}
.luck{position: absolute;left:13%; bottom:17%; height: 26px; line-height: 26px; font-size:0.75rem; color: white;}
.seek{position: absolute;right:6%; bottom:17%; height: 26px; line-height: 26px; opacity: 0; font-size:0.75rem; color: white;}
.m-swiper{height: 180px}
.order_box{position: absolute; top:22%; left:8%;width:84%; height:60%; overflow: hidden}
.order_item{width: 100%; margin-bottom:5%}
.order_item text{ display: inline-block; vertical-align: top; font-size: 0.75rem; margin-top:5px; padding: 0 5px}
.order_img{width:30px!important; height:30px; border-radius: 50%; overflow: hidden}
.mask{ position: fixed; z-index: 5; top:0; left: 0;width:100%; height: 100%; background: rgba(0,0,0,0.5)}
.share{position: fixed; z-index: 6; top:23%; left: 0;display:block; width:100%; height: 100%;}
.share_box{position: relative;width:80%;margin:0 10%;}
.share_img{width:100%;}
.nowhelp,.make,.close,.info_txt{position:absolute;right:25%; top:50%; width:50%; text-align: center;opacity: 0; height: 30px; font-size:0.75rem; color: red;}
.make{position:absolute;right:25%; top:67%; width:50%;}
.close{position:absolute;right:40%; bottom:1%; width:20%; top:auto;height: 40px; }
.Jackpot{position: absolute; top:15%; height: 50%; display:flex;
justify-content: space-around;flex-direction:row; flex-wrap: wrap; align-items: center;}
.Jack_item{display: inline-flex; position: relative; width:25%;height: 40px; align-items: center;justify-content:center;}
.jack_num{ position: absolute; top:0; right:0; font-size: 0.60rem;width: 19px; height: 19px; border:1px solid #000000; border-radius: 50%; background: red;color: white; text-align: center; line-height: 18px;}
.selected{color:#9A9A9A}

.info_txt{position:absolute;right:25%; top:32%; opacity:1; font-size: 1rem; color: #000000; font-weight: bold; width:50%;}
.file{width:34px; height: auto; position:fixed; bottom: 10%;right: 5px; z-index: 9;}
.rule_btn{ opacity: 0; position: absolute;width:100%; height: 100%; top:0}